<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="true"
    android:id="@+id/dashboard"
    tools:context="com.kpblog.tt.Fragment_Dashboard">

    <LinearLayout
        android:id="@+id/insertLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/daysSinceLastVisitLayout">
            <EditText
                android:text="@string/daysSinceLastVisit"
                android:enabled="false"
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textAllCaps="true"
                android:layout_height="match_parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/minLayout"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/minimumDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:hint="Min"
                    android:imeOptions="actionNext">
                </EditText>
            </android.support.design.widget.TextInputLayout>

            <EditText
                android:enabled="false"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/to"
                android:layout_height="match_parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/maxLayout"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/maximumDay"
                    android:hint="Max"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:imeOptions="actionNext">
                </EditText>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/daysSinceLastTextLayout">

            <EditText
                android:text="@string/daysSinceLastText"
                android:enabled="false"
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="bottom"
                android:layout_height="match_parent" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lastTextMinLayout"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/lastTextMinimumDay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:hint="Days"
                    android:imeOptions="actionDone">
                </EditText>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:id="@+id/placeholder"
                android:layout_weight="2.5"
                android:layout_width="0dip"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="@string/search"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    style="@style/buttonStyle"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>

</FrameLayout>
